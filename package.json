{
  "name": "aws-web-app-framework",
  "version": "1.0.0",
  "description": "AWS Web Application Framework with Metadata Repository System",
  "private": true,
  "workspaces": [
    "packages/backend",
    "packages/frontend",
    "packages/components",
    "packages/admin"
  ],
  "scripts": {
    "install:all": "npm install",
    "dev:backend": "npm run dev --workspace=packages/backend",
    "dev:frontend": "npm run dev --workspace=packages/frontend",
    "dev:admin": "npm run dev --workspace=packages/admin",
    "build:backend": "npm run build --workspace=packages/backend",
    "build:frontend": "npm run build --workspace=packages/frontend",
    "build:components": "npm run build --workspace=packages/components",
    "build:admin": "npm run build --workspace=packages/admin",
    "build:all": "npm run build:components && npm run build:backend && npm run build:frontend && npm run build:admin",
    "test": "jest && npm run test --workspaces",
    "test:root": "jest",
    "test:backend": "npm run test --workspace=packages/backend",
    "test:frontend": "npm run test --workspace=packages/frontend",
    "test:components": "npm run test --workspace=packages/components",
    "test:admin": "npm run test --workspace=packages/admin",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "generate-test-data": "ts-node scripts/generate-test-data.ts"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.16",
    "axios": "^1.6.7",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
