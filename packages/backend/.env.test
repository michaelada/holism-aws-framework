# Test Database Configuration
# This database is used exclusively for running tests
# It will be cleaned between test runs
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=aws_framework_test
DATABASE_USER=framework_user
DATABASE_PASSWORD=framework_password
DATABASE_URL=postgresql://framework_user:framework_password@localhost:5432/aws_framework_test

# Application Configuration
NODE_ENV=test
API_PORT=3001
LOG_LEVEL=error

# Development: Disable authentication for testing
DISABLE_AUTH=true

# Keycloak Configuration (not used in tests)
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=aws-framework
KEYCLOAK_CLIENT_ID=aws-framework-backend
KEYCLOAK_CLIENT_SECRET=test-secret

# AWS Configuration (not used in tests)
AWS_REGION=eu-west-1
AWS_SECRETS_ARN=

# Monitoring
PROMETHEUS_PORT=9092
